<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GestionCitaDental</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GestionCitaDental.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GestionCitaDental</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Correos" asp-action="Index">Correos</a>
                        </li>
                        @* <li class="nav-item">
                        <a class="nav-link " asp-area="" asp-controller="EstadoCitums" asp-action="Index">Estado de Citas</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link " asp-area="" asp-controller="Citums" asp-action="Index">Citas</a>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Odontologoes" asp-action="Index">Doctores</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Pacientes" asp-action="Index">Pacientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Procedimientoes" asp-action="Index">Procedimientos</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdownUsuarios" href="#page-top" role="button" data-bs-toggle="dropdown" aria-expanded="false">Usuarios</a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownUsuarios">
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="TipoUsuarios" asp-action="Index">Tipo Usuarios</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdownCitas" href="#page-top" role="button" data-bs-toggle="dropdown" aria-expanded="false">Citas</a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownCitas">
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="Citums" asp-action="Index">Citas</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="EstadoCitums" asp-action="Index">Estado de Citas</a>
                                </li>
                            </ul>
                        </li>

                        @* <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="TipoUsuarios" asp-action="Index">Tipo Usuarios</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <a id="inicio-sesion" href="@Url.Action("Privacy", "Home")" class="btn-login">
                        Iniciar Sesión
                    </a>
                    </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - GestionCitaDental - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
