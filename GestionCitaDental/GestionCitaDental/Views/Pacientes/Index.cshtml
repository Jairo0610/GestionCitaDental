@model IEnumerable<GestionCitaDental.Models.TblPaciente>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                NOMBRE
            </th>
            <th>
                TELEFONO
            </th>
            <th>
                DIRECCION
            </th>
            <th>
                DUI
            </th>
            <th>
                CORREO
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dui)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCorreoNavigation.Correo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPaciente">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPaciente">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPaciente">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
